<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="reporte_move" name="Reporte Comprobante de Movimiento">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.internal_layout">
                        <div class="page">
                            <div class="row">
                            <div class="col-xs-6">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <div class="logo" style="width: 330px; height: 180px;">
                                            <div>
                                                <p>Fecha y hora de impresión: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/></p>
                                            </div>
                                            <img t-if="res_company.logo" height="150px" t-att-src="'data:image/png;base64,%s' % res_company.logo"/>
                                        </div>
                                        <br/>
                                        <h4>
                                            <span t-esc="res_company.name"/>
                                        </h4>
                                        <span>
                                            <strong>DIRECCION:</strong>
                                        </span>
                                        <span t-esc="res_company.street"/>
                                        y
                                        <span t-esc="res_company.street2"/>
                                        <span t-esc="res_company.city"/>
                                        <br/>
                                        <span>
                                            <strong>Contribuyente Especial Nro.:</strong>
                                        </span>
                                        <span t-esc="res_company.company_registry or '000' "/>
                                        <br/>
                                        <span>
                                            <strong>Obligado a Llevar contabilidad:</strong>
                                            SI
                                        </span>
                                    </div>
                                </div>
                            </div>
                    </div>

                            <p style="font-size: 12pt">
                                <strong>Comprobante Contable Nro. :</strong>
                                <t t-esc="o.name"></t>
                            </p>
                            <p style="font-size: 12pt">
                                <strong>Diario :</strong>
                                <t t-esc="o.journal_id.name"></t>
                            </p>
                            <table class="table" style="font-size: 12pt">
                                <tbody>
                                    <tr>
                                        <td>
                                            <strong>Fecha:</strong>
                                        </td>
                                        <td>
                                            <t t-esc="o.date"></t>
                                        </td>
                                        <td>
                                            <strong>Documento:</strong>
                                        </td>
                                        <td>
                                            <t t-esc="o.ref"></t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Empresa:</strong>
                                        </td>
                                        <td>
                                            <t t-esc="o.partner_id.name"></t>
                                        </td>
                                        <td>
                                            <strong>Referencia:</strong>
                                        </td>
                                        <td>
                                             <span t-esc="o.narration"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Forma Pago:</strong>
                                        </td>
                                        <td>
                                            <t t-esc="o.forma_pago"></t>
                                        </td>
                                        <td>
                                            <strong>Número:</strong>
                                        </td>
                                        <td>
                                            <t t-esc="o.numero"></t>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <p style="text-align: left;">
                                <strong>Detalle Contable</strong>
                            </p>

                            <table class="table-striped" style="font-size: 12pt">
                                <thead>
                                    <tr>
                                        <th style="text-align: center; width: 131.033px;">CODIGO</th>
                                        <th style="text-align: center; width: 799.25px;">CUENTA</th>
                                        <th style="text-align: center; width: 168.717px;">DEBE</th>
                                        <th style="width: 168px; text-align: center;">HABER</th>
                                    </tr>
                                </thead>
                                <tbody style="font-size: 12pt">
                                    <t t-set="total_debit" t-value="0"/>
                                    <t t-set="total_credit" t-value="0"/>
                                    <t t-foreach="groupby(o.line_ids.sorted(key=lambda r: r.credit))" t-as="move">
                                        <tr>
                                            <td style="text-align: left; width: 131.033px;">
                                                <t t-esc="move['code']"></t>
                                            </td>
                                            <td style="text-align: left; width: 799.25px; padding-left: 40px;">
                                                <t t-esc="move['name']"></t>
                                            </td>
                                            <td style="text-align: right; width: 168.717px;">
                                                <span t-esc="move['debit']"
                                                      t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}">
                                                </span>
                                            </td>
                                            <td style="width: 168px; text-align: right;">
                                                <span t-esc="move['credit']"
                                                      t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"></span>
                                            </td>
                                            <t t-set="total_debit" t-value="total_debit+move['debit']"/>
                                            <t t-set="total_credit" t-value="total_credit+move['credit']"/>
                                        </tr>
                                    </t>
                                </tbody>
                                <tfoot style="font-size: 12pt">
                                    <tr>
                                        <td style="text-align: right;" colspan="2">
                                            <strong>Totales</strong>
                                        </td>
                                        <td style="text-align: right;">
                                            <strong>
                                                <span t-esc="total_debit "
                                                      t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"></span>
                                            </strong>
                                        </td>
                                        <td style="text-align: right;">
                                            <strong>
                                                <span t-esc="total_credit"
                                                      t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"></span>
                                            </strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: left;" colspan="2"></td>
                                        <td style="text-align: center;"></td>
                                        <td style="text-align: center;">
                                            <br></br>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                            <br/>
                            <br/>
                            <br/>
                            <div class="row" style="text-align: center; font-size: 9px;">
                                <div class="col-xs-4">
                                    <hr></hr>
                                    <span>
                                        <strong>REALIZADO POR</strong>
                                    </span>
                                </div>
                                <div class="col-xs-4">
                                    <hr></hr>
                                    <span>
                                        <strong>REVISADO POR</strong>
                                    </span>
                                </div>
                                <div class="col-xs-4">
                                    <hr></hr>
                                    <span>
                                        <strong>AUTORIZADO POR</strong>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>

            </t>
        </template>
    </data>
</openerp>
