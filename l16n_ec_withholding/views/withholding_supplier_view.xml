<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!--
            Grupo de impuestos visible
        -->

        <record id="view_account_retention_customer_tree" model="ir.ui.view">
            <field name="name">account.retention.tree</field>
            <field name="model">account.retention</field>
            <field name="arch" type="xml">
                <tree string="Retenciones" decoration-info="state == 'draft'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="date"/>
                    <field name="invoice_id"/>
                    <!-- <field name="amount_total"/> -->
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_account_retention_customer_form" model="ir.ui.view">
            <field name="name">view.account.retention.form</field>
            <field name="model">account.retention</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Retenci贸n a Proveedor">
                    <header>
                        <button name="action_cancel" string="Anular" type="object" states="draft,done"/>
                        <button name="button_validate" string="Validar" class="oe_highlight" type="object"
                                states="draft"/>
                        
                        <button name="action_draft" string="Volver a Borrador" type="object" states="cancel"/>

                        <button name="print" string="Retenci贸n" type="object" states="done" class="btn btn-primary" icon="fa-print"/>
                        
                        
                        
                        <field name="state" widget="statusbar"/> 
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label for="name" class="px-0" attrs="{'invisible': [('state','!=','draft')]}">
                                Retenci贸n Borrador
                                </label>
                                <label for="name" class="px-0"  string="" attrs="{'invisible': [('state','=','draft')]}">Retenci贸n Generada</label>
                                <field name="name" class="oe_inline" required="1"/>
                                <field name="authorization_number"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" select="1"  />
                                <field name="invoice_id" options="{'no_create': True, 'no_create_edit': True}"
                                 domain="[('partner_id','=',partner_id),
                                 ('move_type','in',['in_invoice', 'liq_purchase'])
                                 ,('state','=','posted'),('retention_id','=',False)]" />
                                /> 
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="l10n_latam_document_type_id" select="1" domain="[('code','=',42)]"/>
                                <!-- <field name="type" invisible="1"/> --> 
                                <field name="in_type"/>
                            </group>
                            <!-- <field name="currency_id" invisible="1"/> -->
                        </group>
                        <notebook colspan="4">
                            <page string="Impuestos">
                                <field name="move_ids" nolabel="1">
                                    <tree string="Impuestos Aplicados">
                                        <field name="fiscal_year"/>
                                        <field name="tax_id"/>
                                        <field  name="l10n_ec_code_base"/>
                                        <field name="base"/>
                                        <field name="amount"/>
                                    </tree>
                                    <form string="Impuestos">
                                        <group>
                                            <group>
                                                <field name="tax_id" required="1" domain="[('type_tax_use','=','purchase'),('tax_group_id.l10n_ec_type','in',['withhold_vat','withhold_income_tax','outflows_tax','other'])]"
                                                options="{'no_create': True, 'no_create_edit': True}"
                                                />
                                                <field name="account_id" groups="account.group_account_user"/>
                                                <field name="fiscal_year" readonly="1"/>
                                            </group>
                                            <group>
                                                <field name="amount"/>
                                                <field name="base"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="amount_total" widget="monetary" class="oe_subtotal_footer_separator"/>
                                </group>
                                <separator string=""/>
                            </page>
                            <page string="Info Extra">
                                <group>
                                    <field name="move_id"/>
                                    
                                    
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="action_retention_supplier" model="ir.actions.act_window">
            <field name="name">Retenciones de Compras</field>
            <field name="res_model">account.retention</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="view_account_retention_customer_tree"/>
            <field name="context">{'in_type': 'ret_in_invoice', 'type': 'in_invoice'}</field>
            <field name="domain">[('in_type','=','ret_in_invoice')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a customer invoice
                </p><p>
                    Create invoices, register payments and keep track of the discussions with your customers.
                </p>
            </field>
        </record>
        
        <record id="action_retention_supplier_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_account_retention_customer_form"/>
            <field name="act_window_id" ref="action_retention_supplier"/>
        </record>    
        
        <record id="action_retention_supplier_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_account_retention_customer_tree"/>
            <field name="act_window_id" ref="action_retention_supplier"/>
        </record>
        
        
        <menuitem action="action_retention_supplier" id="menu_retention_supplier_form"
            parent="account.menu_finance_payables" sequence="4"/>

    </data>
</odoo>
